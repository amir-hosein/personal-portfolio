<h2 class="contact-table-header">Contacts List</h2>
<div class="table-responsive">
  <table class="table table-hover users-table">
    <thead>
      <tr>
        <th>Contact Name</th>
        <th>Contact Number</th>
        <th>Email Address</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% for (let i = 0; i < users.length; i++) { %>
        <tr>
          <td><%= users[i].ContactName %></td>
          <td><%= users[i].ContactNumber %></td>
          <td><%= users[i].EmailAddress %></td>
          <td>
            <a class="portfolio-link" data-toggle="modal" href="#edit_user">
              <button class="btn btn-success edit-user"><i class="fas fa-edit"></i></button>
            </a>
            <button class="btn btn-danger delete-user"><i class="far fa-trash-alt"></i></button>
            <!-- Modal -->
            <% include users_table_modal %>
          </td>
        </tr>    
      <% } %>
    </tbody>
  </table>
</div>